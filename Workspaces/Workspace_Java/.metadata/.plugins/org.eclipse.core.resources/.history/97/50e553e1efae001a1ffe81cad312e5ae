package com.test03;

public class StarPrn {

	public static void main(String[] args) {
		
		
		StarPrn star = new StarPrn();
		
		star.one();
		System.out.println();
		star.two();
		System.out.println();
		star.three();
		System.out.println();
		star.four();
		System.out.println();
		star.five();
		
	}
	
	public void one() {
	/*
	 * *
	 * **
	 * ***
	 * ****
	 * *****	
	 */
	
//		
//	for (int i = 0; i < 6; i++) {
//
//			for (int j = 0; j < i; j++) {
//				System.out.print("*");
//			}
//			System.out.println();
//			}
		
		//i는 줄
		for(int i=0 ; i < 5; i++) {
			//j는 별 (0+1, 1+1, 2+1, 3+1, 4+1)
			for(int j=0; j < i+1; j++) {
				System.out.print("*");
			}
			
			System.out.println();
		}
	
		
		
		}
	
	public void two() {
		
		/*
		 * *****
		 * ****
		 * ***
		 * **
		 * *
		 */
		
//		for(int i = 5; i > 0 ; i--) {
//			
//			for (int j = i; j>0;j --) {
//				System.out.print("*");
//			}
//			System.out.println();
//		}
		
		for (int i = 0; i < 5; i++) {
			for( int j = 0; j< 5-j; j++)
				System.out.print("*");
		}
		
		System.out.println();
	}
	
	public void three() {
		
		//    *
		//   **
		//	***
		// ****
		//*****
	
		for(int i = 5 ; i > 0; i--) {
			for(int j=0; j < 6; j++) {
				
				if(i <= j) {
					System.out.print("*");
					
				}else {
					System.out.print(" ");
				}
				
				
			}
			System.out.println();
		}
	}
	
	public void four() {
		//*****
		// ****
		//  ***
		//   **
		//    *
		
		for(int i=5; i>0;i--) {
			for(int j=5;j>0;j--) {
				if(i >= j ) {
					System.out.print("*");
				}else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
			
	}
	
	public void five() {
		//      *
		//     ***
		// 	  *****
		//   *******
		//  *********
		
		for (int i=4;i>=0;i--) {
			for(int j=1; j<10; j++) {
			
				if(j <=i) {
					System.out.print(" ");
				}else if(j > 9-i) {
					System.out.print(" ");
				}else {
					System.out.print("*");
				}
			}
			System.out.println();
		}
	
	}
	
}
