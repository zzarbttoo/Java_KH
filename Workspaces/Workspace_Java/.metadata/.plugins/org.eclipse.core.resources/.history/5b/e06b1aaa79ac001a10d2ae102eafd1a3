package com.test03;

public class Score {

	public double getAvg(int i, int j, int k) {
		
		//명시적 형변환을 해주어야한다
		return (double) i + j + k / 3 ;
		
	}
	
	String getGrade(double avg) {
		
		String score = null;
		
		if (avg >= 90) score = "A";
		else if (avg >= 80) score = "B";
		else if (avg >= 70) score = "C";
		else if (avg >= 60) score = "D";
		else score = "F";
		
		return score;
		
	}
	
	
}
