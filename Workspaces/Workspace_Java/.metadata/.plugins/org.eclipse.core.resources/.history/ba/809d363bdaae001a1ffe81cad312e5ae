package com.test03;

public class StarPrn {

	public static void main(String[] args) {
		
		
		StarPrn star = new StarPrn();
		
		star.one();
		System.out.println();
		star.two();
		System.out.println();
		star.three();
		System.out.println();
		star.four();
		System.out.println();
		star.five();
		
	}
	
	public void one() {
	/*
	 * *
	 * **
	 * ***
	 * ****
	 * *****	
	 */
	for (int i = 0; i < 6; i++) {

			for (int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
			}
		}
	
	public void two() {
		
		/*
		 * *****
		 * ****
		 * ***
		 * **
		 * *
		 */
		
		for(int i = 5; i > 0 ; i--) {
			
			for (int j = i; j>0;j --) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	public void three() {
		
		//    *
		//   **
		//	***
		// ****
		//*****
	
		for(int i = 5 ; i > 0; i--) {
			for(int j=0; j < 6; j++) {
				
				if(i <= j) {
					System.out.print("*");
					
				}else {
					System.out.print(" ");
				}
				
				
			}
			System.out.println();
		}
	}
	
	public void four() {
		//*****
		// ****
		//  ***
		//   **
		//    *
		
		for(int i = 1; i <6 ; i++) {
			for(int j = 6 ; j > 0; j--) {
				
				if(j>=i) {
					System.out.print("*");
				}else {
					System.out.print(" ");
				}
				
			}
			System.out.println();
		}
			
	}
	
	public void five() {
		//      *
		//     ***
		// 	  *****
		//   *******
		//  *********
		
		
	
	}
	
}
