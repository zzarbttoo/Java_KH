<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myboard">

	<select id="selectList" resultType="myBoardDto">
		SELECT MYNO, MYNAME, MYTITLE, MYCONTENT, MYDATE
		FROM MYBOARD ORDER BY MYNO DESC
	</select>
	
	<select id = "selectOne" resultType = "myBoardDto" parameterType = "int">
		SELECT MYNO, MYNAME, MYTITLE, MYCONTENT, MYDATE
		FROM MYBOARD WHERE MYNO = #{myno}
	</select>

	<insert id = "insert" parameterType = "myBoardDto">
		INSERT INTO MYBOARD VALUES
		(MYNOSEQ.NEXTVAL, #{myname}, #{mytitle}, #{mycontent}, SYSDATE)
	</insert>
	
	<update id = "update" parameterType = "myBoardDto">
		UPDATE MYBOARD SET MYCONTENT = #{mycontent} WHERE MYNO = #{myno}
	</update>
	
	<delete id = "delete" parameterType = "int">
		DELETE FROM MYBOARD WHERE MYNO = #{myno}
	</delete>
	
</mapper>
